%tokens%

LEFT_PAREN                   = "("
RIGHT_PAREN                  = ")"
LEFT_BRACKET                 = "["
RIGHT_BRACKET                = "]"
LEFT_BRACE                   = "{"
RIGHT_BRACE                  = "}"
QUESTION                     = "?"
ASTERISK                     = "*"
PLUS                         = "+"
VERTICAL_BAR                 = "|"
DOT                          = "."
COMMA                        = ","
NUMBER                       = <<[0-9]+>>
CHAR                         = <<(\\.)|.>>


%productions%

Expr = Term ["|" Expr] ;

Term = Fact+ ;

Fact = Atom [AtomModifier] ;

Atom = CHAR
     | NUMBER
     | ","
     | "."
     | "(" Expr ")"
     | "[" CharacterSet "]" ;

AtomModifier = "?" ["?"]
             | "*" ["?"]
             | "+" ["?"]
             | "{" NUMBER ["," [NUMBER]] "}" ["?"] ;

CharacterSet = Character+ ;

Character = CHAR
          | NUMBER
          | ","
          | "."
          | "|"
          | "+"
          | "*"
          | "?"
          | "{"
          | "}"
          | "("
          | ")"
          | "[" ;
